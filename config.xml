<?xml version='1.0' encoding='utf-8'?>
<widget id="com.rasmata.h2openapp" version="0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>H2OpenMap</name>
    <description>
        A mapping application for water resource made by Francesco Giunta - Rasmata Onlus - CC BY-NC 4.0 
    </description>
    <author email="giunta.francesco@gmail.com" href="http://h2openmap.org">
        Francesco Giunta - Rasmata Onlus
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <allow-navigation href="http://*/*" />
    <allow-navigation href="https://*/*" />
    <allow-navigation href="data:*" />
    <engine name="ios" spec="~4.1.0" />
    <engine name="android" spec="~5.1.1" />
    <platform name="android">
        <allow-intent href="market:*" />
<!--    <icon src="res/android/drawable-ldpi/ic_launcher.png" density="ldpi" /> -->
        <icon src="res/android/drawable-mdpi/ic_launcher.png" density="mdpi" />
        <icon src="res/android/drawable-hdpi/ic_launcher.png" density="hdpi" />
        <icon src="res/android/drawable-xhdpi/ic_launcher.png" density="xhdpi" />
<!--    <icon src="res/android/drawable-xxhdpi/ic_launcher.png" density="xxhdpi" />
        <icon src="res/android/drawable-xxxhdpi/ic_launcher.png" density="xxxhdpi" /> -->
<!--    <splash density="port-ldpi" height="320" src="res/screen/android/splash_square_xxxhdpi.png" width="200" /> -->
<!--    <splash density="port-mdpi" height="480" src="res/screen/android/splash_square_xxxhdpi.png" width="320" /> -->
        <splash density="port-hdpi" height="800" src="res/screen/android/splash_square_xxxhdpi.png" width="480" />
        <splash density="port-xhdpi" height="1280" src="res/screen/android/splash_square_xxxhdpi.png" width="720" />
<!--    <splash density="port-xxhdpi" height="1600" src="res/screen/android/splash_square_xxxhdpi.png" width="960" />
        <splash density="port-xxxxhdpi" height="1920" src="res/screen/android/splash_square_xxxhdpi.png" width="1280" /> -->
<!--    <splash density="land-ldpi" height="200" src="res/screen/android/splash_square_xxxhdpi.png" width="320" /> -->
<!--    <splash density="land-mdpi" height="320" src="res/screen/android/splash_square_xxxhdpi.png" width="480" /> -->
        <splash density="land-hdpi" height="480" src="res/screen/android/splash_square_xxxhdpi.png" width="640" />
        <splash density="land-xhdpi" height="720" src="res/screen/android/splash_square_xxxhdpi.png" width="960" />
<!--    <splash density="land-xxhdpi" height="960" src="res/screen/android/splash_square_xxxhdpi.png" width="960" />
        <splash density="land-xxxhdpi" height="1280" src="res/screen/android/splash_square_xxxhdpi.png" width="960" /> --> 
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
        <icon height="180" src="res/ios/icon-60@3x.png" width="180" />
        <icon height="60" src="res/ios/icon-60.png" width="60" />
        <icon height="120" src="res/ios/icon-60@2x.png" width="120" />
        <icon height="76" src="res/ios/icon-76.png" width="76" />
        <icon height="152" src="res/ios/icon-76@2x.png" width="152" />
        <icon height="40" src="res/ios/icon-40.png" width="40" />
        <icon height="80" src="res/ios/icon-40@2x.png" width="80" />
        <icon height="57" src="res/ios/icon.png" width="57" />
        <icon height="114" src="res/ios/icon@2x.png" width="114" />
        <icon height="72" src="res/ios/icon-72.png" width="72" />
        <icon height="144" src="res/ios/icon-72@2x.png" width="144" />
        <icon height="29" src="res/ios/icon-small.png" width="29" />
        <icon height="58" src="res/ios/icon-small@2x.png" width="58" />
        <icon height="50" src="res/ios/icon-50.png" width="50" />
        <icon height="100" src="res/ios/icon-50@2x.png" width="100" />
    </platform>
    <preference name="AutoHideSplashScreen" value="true" />
    <preference name="FadeSplashScreenDuration" value="1000" />
    <preference name="SplashScreenDelay" value="5000" />
    <preference name="FadeSplashScreen" value="true" />
    <preference name="ShowSplashScreenSpinner" value="false" />
    <preference name="SplashMaintainAspectRatio" value="true" />
    <preference name="SplashShowOnlyFirstTime" value="false" />
    <preference name="CameraUsesGeolocation" value="true" />
    <preference name="AndroidPersistentFileLocation" value="Compatibility" />
    <preference name="ShowTitle" value="H2OpenMap" />    
</widget>
