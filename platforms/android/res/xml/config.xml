<?xml version='1.0' encoding='utf-8'?>
<widget id="com.rasmata.h2openapp" version="0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <preference name="loglevel" value="DEBUG" />
    <feature name="Whitelist">
        <param name="android-package" value="org.apache.cordova.whitelist.WhitelistPlugin" />
        <param name="onload" value="true" />
    </feature>
    <feature name="Device">
        <param name="android-package" value="org.apache.cordova.device.Device" />
    </feature>
    <feature name="Notification">
        <param name="android-package" value="org.apache.cordova.dialogs.Notification" />
    </feature>
    <feature name="Geolocation">
        <param name="android-package" value="org.apache.cordova.geolocation.Geolocation" />
    </feature>
    <feature name="File">
        <param name="android-package" value="org.apache.cordova.file.FileUtils" />
        <param name="onload" value="true" />
    </feature>
    <feature name="FileTransfer">
        <param name="android-package" value="org.apache.cordova.filetransfer.FileTransfer" />
    </feature>
    <feature name="SplashScreen">
        <param name="android-package" value="org.apache.cordova.splashscreen.SplashScreen" />
        <param name="onload" value="true" />
    </feature>
    <feature name="CropPlugin">
        <param name="android-package" value="com.jeduan.crop.CropPlugin" />
    </feature>
    <feature name="NetworkStatus">
        <param name="android-package" value="org.apache.cordova.networkinformation.NetworkManager" />
    </feature>
    <feature name="Camera">
        <param name="android-package" value="org.apache.cordova.camera.CameraLauncher" />
    </feature>
    <allow-intent href="market:*" />
    <icon density="mdpi" src="res/android/drawable-mdpi/ic_launcher.png" />
    <icon density="hdpi" src="res/android/drawable-hdpi/ic_launcher.png" />
    <icon density="xhdpi" src="res/android/drawable-xhdpi/ic_launcher.png" />
    <splash density="port-hdpi" height="800" src="res/screen/android/splash_square_xxxhdpi.png" width="480" />
    <splash density="port-xhdpi" height="1280" src="res/screen/android/splash_square_xxxhdpi.png" width="720" />
    <splash density="land-hdpi" height="480" src="res/screen/android/splash_square_xxxhdpi.png" width="640" />
    <splash density="land-xhdpi" height="720" src="res/screen/android/splash_square_xxxhdpi.png" width="960" />
    <name>H2OpenMap</name>
    <description>
        A mapping application for water resource made by Francesco Giunta - Rasmata Onlus - CC BY-NC 4.0 
    </description>
    <author email="giunta.francesco@gmail.com" href="http://h2openmap.org">
        Francesco Giunta - Rasmata Onlus
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <allow-navigation href="http://*/*" />
    <allow-navigation href="https://*/*" />
    <allow-navigation href="data:*" />
    <preference name="AutoHideSplashScreen" value="true" />
    <preference name="FadeSplashScreenDuration" value="1000" />
    <preference name="SplashScreenDelay" value="5000" />
    <preference name="FadeSplashScreen" value="true" />
    <preference name="ShowSplashScreenSpinner" value="false" />
    <preference name="SplashMaintainAspectRatio" value="true" />
    <preference name="SplashShowOnlyFirstTime" value="false" />
    <preference name="CameraUsesGeolocation" value="true" />
    <preference name="AndroidPersistentFileLocation" value="Compatibility" />
    <preference name="ShowTitle" value="H2OpenMap" />
</widget>
